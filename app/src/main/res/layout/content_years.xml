<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_years"
        tools:context=".years">

    <TableLayout
            android:layout_width="331dp"
            android:layout_height="343dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="30dp" android:layout_marginStart="30dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="30dp" android:layout_marginRight="30dp"
            app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/tableLayout"
            android:layout_marginBottom="148dp" android:layout_marginTop="150dp"
            app:layout_constraintTop_toBottomOf="@+id/addYear">

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:layout_width="192dp"
                    android:layout_height="wrap_content" android:id="@+id/year1" android:text="1"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:text="2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/year2"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:text="3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/year3"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:text="4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/year4"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:text="5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/year5"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:text="6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/year6"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:text="7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/year7"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:text="8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/year8"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView
                    android:text="9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/year9"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView
                    android:text="10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/year10"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView
                    android:text="11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/year11"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView
                    android:text="12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/year12"/>
        </TableRow>
    </TableLayout>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/enterYear" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/addYear" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="50dp" android:layout_marginStart="50dp"
            app:layout_constraintEnd_toStartOf="@+id/confirm" android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="Policz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/confirm" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp" android:layout_marginLeft="30dp" android:layout_marginStart="30dp"
            app:layout_constraintStart_toEndOf="@+id/enterYear" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="50dp" android:layout_marginRight="50dp"/>
    <Button
            android:text="+ 1 rok"
            android:layout_width="115dp"
            android:layout_height="45dp"
            android:id="@+id/addYear" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/enterYear" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toStartOf="@+id/minusYear" android:layout_marginEnd="36dp"
            android:layout_marginRight="36dp"/>
    <Button
            android:text="- 1 rok"
            android:layout_width="115dp"
            android:layout_height="45dp"
            android:id="@+id/minusYear" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/enterYear" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="129dp" android:layout_marginRight="129dp"
            app:layout_constraintStart_toEndOf="@+id/addYear" android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"/>
</android.support.constraint.ConstraintLayout>