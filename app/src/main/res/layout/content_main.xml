<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_main"
        tools:context=".MainActivity">
    <TextView
            android:text="Dziś: "
            android:layout_width="325dp"
            android:layout_height="40dp"
            android:id="@+id/dzis"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="110dp" android:layout_marginStart="110dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="260dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="110dp"
            android:layout_marginRight="110dp"/>
    <TextView
            android:text="Poprzedni nów: "
            android:layout_width="325dp"
            android:layout_height="40dp"
            android:id="@+id/poprzedniNow"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="110dp" android:layout_marginStart="110dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="110dp"
            android:layout_marginRight="110dp" android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/dzis"
            app:layout_constraintBottom_toTopOf="@+id/nastepnaPelnia"/>
    <TextView
            android:text="Następna pełnia"
            android:layout_width="325dp"
            android:layout_height="40dp"
            android:id="@+id/nastepnaPelnia"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="110dp" android:layout_marginStart="110dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="110dp"
            android:layout_marginRight="110dp" android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/poprzedniNow"
            app:layout_constraintBottom_toTopOf="@+id/pelnieRok"/>
    <Button
            android:text="Pełnie w roku"
            android:layout_width="186dp"
            android:layout_height="50dp"
            android:id="@+id/pelnieRok" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="110dp"
            android:layout_marginStart="110dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="110dp" android:layout_marginRight="110dp" android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/nastepnaPelnia" android:layout_marginBottom="47dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
            android:layout_width="184dp"
            android:layout_height="193dp" app:srcCompat="@drawable/partmoon"
            android:id="@+id/moonImg"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="90dp"
            android:layout_marginStart="90dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="90dp"
            android:layout_marginRight="90dp" android:layout_marginBottom="90dp"
            app:layout_constraintBottom_toTopOf="@+id/dzis" android:layout_marginTop="70dp"
            app:layout_constraintTop_toTopOf="parent"/>
</android.support.constraint.ConstraintLayout>